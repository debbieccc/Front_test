@model IEnumerable<eco.tEventSet>

@{
    ViewBag.Title = "Event";
}
<link rel="stylesheet" href="../style/event.css">
<link rel="stylesheet" href="~/fontawesome/all.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<main class="container mt-4">
    <div class="smalltitle" style="text-align: center;">
        <h2><b>｜　社區活動　｜</b></h2>
    </div>
    <div class="searchbar">
        <form class="form-inline my-2 my-lg-0 ">
            <div class="">
                <label>
                    <select class="form-control_select mr-sm-2">
                        <option value="allCategory">分類</option>
                        <option value="sport">運動</option>
                        <option value="lesson">課程 </option>
                        <option value="buytogether">團購</option>
                        <option value="gathering">聚會</option>
                        <option value="buytogether">招募</option>
                        <option value="other">其他</option>
                    </select>
                </label>
            </div>
            <input class="form-control_1 mr-sm-2" type="search" placeholder="請輸入關鍵字" aria-label="Search">
            <span> 日期：</span>
            <input class="form-control_date mr-sm-2" id="datepicker" type="date" placeholder="請選擇日期"
                   aria-label="Search"> <span> 到 &nbsp;</span>
            <input class="form-control_date mr-sm-2" id="datepicker" type="date" placeholder="請選擇日期"
                   aria-label="Search">
            <button type="button" class="btn btn-info"> <i class="fa fa-search"></i> 搜尋</button>
        </form>
    </div>
    <div class="row mb-5 ml-2">
        <div class="orderby mt-4">
            排序方式：
            <label>
                <select class="form-control_select mr-sm-2" style="width: 120px">
                    <option value="sport">由近到遠</option>
                    <option value="lesson">由遠到近</option>
                </select>
            </label>
        </div>

        <div class="orderby mt-4">
            <label>
                <select class="form-control_select mr-sm-2">
                    <option value="allCategory">費用</option>
                    <option value="buytogether">免費</option>
                    <option value="gathering">付費</option>
                </select>
            </label>
        </div>

    </div>
    <div class="row ">
        @foreach (var item in Model)
        {
            <div class="eventcard">
                <img src="~/image/event/yoga_signup.png" class="card-img-top" alt="...">
                <div class="card_body">
                    <span class="eventtime"> <i class="fa fa-clock-o"></i> @Html.DisplayFor(modelItem => item.fEventFromDay) - @Html.DisplayFor(modelItem => item.fEventEndDate)</span>
                    <h5 class="eventtitle"><b> @Html.ActionLink(item.fEventTitle, "Event_page", new { id = item.fEventId },new { @class="actiontag"})</b> </h5>                  
                    <br />
                    <div class="categoryhashtag d-flex justify-content-between">
                        <span class="">　# @Html.DisplayFor(modelItem => item.fCategory)</span>
                        <span class="followup"><i class="fa fa-plus"></i> 關注</span>
                    </div>
                </div>
            </div>
        }
    </div>

</main>
<script>
    
    $(".followup").click(function () {
            $(this).css("background-color", "orange");
            $(this).css("color", "white");
            $(this).addClass("ccc");
            $(this).text("關注中") 
        
    })
    console.log($(".followup"))

</script>